      },
      async favorite(event) {
        event.persist();
        await this.props.dispatch(favorite({
          slug: this.props.article.article.slug,
          method: this.props.article.article.favorited ? 'delete' : 'post',
        }));
        event.target.blur();
      }*/
    }
  </script>
</article-div>
