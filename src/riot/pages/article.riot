        if (!this.props.article.error) {
          this.props.history.replace(`/author/${this.props.user.username}`);
        }
      },
      async deleteComment(id) {
        this.props.dispatch(deleteComment({
          id,
          slug: this.props.article.article.slug,
        }));
      },
      async follow(event) {
        event.persist();
