{
    "parser": "babel-eslint",
    "plugins": [
        "html"
    ],
    "settings": {
        "html/html-extensions": [".html", ".riot"]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
    }
}
